

<% if user_signed_in? %>
<div class = "profile">
    <div class="propic">
        <%= image_tag current_user.photo ,class: 'picture' %>
    </div>

        <div class= "details">
         <div class = "container">
    <div class = "row">
      <div class = "col-xs-12 col-md-6 ">
 
            <h3 style="color:green"> Name: </h3> <p style="color:black"> <%= current_user.username%></p>
            
            <h3 style="color:green;margin-top:30px;"> Email: </h3 > <p style="color:black"> <%= current_user.email %> </p>
            
                     <h2 style="color:green;margin-top:30px;"> User Preference </h2>
            <h3 style="color:red;margin-top:30px;"> Action Movie: </h3> 
            <% if current_user.action ==1 %>
            <%= image_tag("like.jpeg" , class:"image")  %>
            <% else %>

              <%= image_tag("dislike.jpg" , class:"image")  %>

            <% end %>

               </div>
            <div class = "col-xs-12 col-md-6">


            <h3 style="color:red;"> Romantic Movie: </h3> 
            <% if current_user.romance ==1 %>
            <%= image_tag("like.jpeg" , class:"image") %>
            <% else %>

              <%= image_tag("dislike.jpg" , class:"image")  %>

            <% end %>

            <h3 style="color:red;margin-top:30px;"> Comedy Movie: </h3> 
            <% if current_user.comedy ==1 %>
            <%= image_tag("like.jpeg" , class:"image")  %>
            <% else %>

              <%= image_tag("dislike.jpg" , class:"image")  %>

            <% end %>
            </div>
            </div>
            </div>
          
            
        </div>
         
</div>
<% else %>
<% flash[:alert] = "Please Log in"    %>
     <% controller.redirect_to new_user_session_path %>


<% end %>
