            	<li class="menu-item"><%= link_to 'Profile', profile_path %></li>
				<li class="menu-item"><%= link_to 'Edit Settings', edit_user_registration_path %></li>
				<li class="menu-item"><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
            <% else %>
